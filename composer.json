{
    "name": "srwiez/forge-heartbeats",
    "description": "Monitor Laravel scheduled tasks with Laravel Forge Heartbeats API",
    "keywords": [
        "laravel",
        "forge",
        "heartbeats",
        "monitoring",
        "scheduled-tasks",
        "cron"
    ],
    "homepage": "https://github.com/srwiez/forge-heartbeats",
    "license": "MIT",
    "authors": [
        {
            "name": "SRWieZ",
            "email": "srwiez@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.5",
        "lorisleiva/cron-translator": "^0.4.0",
        "nunomaduro/termwind": "^1.15|^2.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.34|^3.0",
        "pestphp/pest-plugin-laravel": "^2.3|^3.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "larastan/larastan": "^2.8|^3.0",
        "laravel/pint": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "SRWieZ\\ForgeHeartbeats\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SRWieZ\\ForgeHeartbeats\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest -p",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint -p",
        "analyse": "vendor/bin/phpstan analyse",
        "qa": [
            "@format",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SRWieZ\\ForgeHeartbeats\\ForgeHeartbeatsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}